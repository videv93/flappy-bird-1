// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

// Claim status for AuthorClaim
enum ClaimStatus {
  PENDING
  APPROVED
  REJECTED
}

// Verification method for AuthorClaim
enum VerificationMethod {
  AMAZON
  WEBSITE
  MANUAL
}

// User role for access control
enum UserRole {
  USER
  AUTHOR
  ADMIN
  SUPER_ADMIN
}

// Moderation status for ModerationItem
enum ModerationStatus {
  PENDING
  DISMISSED
  WARNED
  REMOVED
  SUSPENDED
}

// Content type for ModerationItem
enum ContentType {
  PROFILE_BIO
  READING_ROOM_DESCRIPTION
}

// Warning type for UserWarning
enum WarningType {
  FIRST_WARNING
  FINAL_WARNING
}

// Suspension duration for UserSuspension
enum SuspensionDuration {
  HOURS_24
  DAYS_7
  DAYS_30
  PERMANENT
}

// Rejection reason for AuthorClaim
enum RejectionReason {
  INSUFFICIENT_EVIDENCE
  NOT_THE_AUTHOR
  DUPLICATE_CLAIM
  OTHER
}

// Violation type for ContentRemoval
enum ViolationType {
  SPAM
  HARASSMENT
  SPOILERS
  INAPPROPRIATE
  OTHER
}

// Buddy read status
enum BuddyReadStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

// Buddy read invitation status
enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
}

// Reading status enum for UserBook
enum ReadingStatus {
  CURRENTLY_READING
  FINISHED
  WANT_TO_READ
}

// Premium status for User monetization
enum PremiumStatus {
  FREE
  PREMIUM
}

// Payment status for Payment records
enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model User {
  id                  String    @id @default(cuid())
  email               String    @unique
  emailVerified       Boolean   @default(false) @map("email_verified")
  name                String?
  image               String?
  bio                 String?
  avatarUrl           String?   @map("avatar_url")
  applePrivateRelay   Boolean   @default(false) @map("apple_private_relay")
  favoriteGenres      String[]  @default([]) @map("favorite_genres")
  showReadingActivity Boolean   @default(true) @map("show_reading_activity")
  dailyGoalMinutes    Int?      @map("daily_goal_minutes")
  role                UserRole  @default(USER)
  lastActivityViewedAt DateTime? @map("last_activity_viewed_at")
  bioRemovedAt        DateTime? @map("bio_removed_at")
  suspendedUntil      DateTime? @map("suspended_until")
  suspensionReason    String?       @map("suspension_reason")
  premiumStatus       PremiumStatus @default(FREE) @map("premium_status")
  polarCustomerId     String?       @map("polar_customer_id")
  createdAt           DateTime      @default(now()) @map("created_at")
  updatedAt           DateTime      @updatedAt @map("updated_at")

  sessions        Session[]
  accounts        Account[]
  userBooks       UserBook[]
  readingSessions ReadingSession[]
  streak          UserStreak?
  dailyProgress   DailyProgress[]
  followers       Follow[]        @relation("UserFollowers")
  following       Follow[]        @relation("UserFollowing")
  kudosGiven      Kudos[]         @relation("KudosGiven")
  kudosReceived   Kudos[]         @relation("KudosReceived")
  roomPresences   RoomPresence[]
  authorClaims       AuthorClaim[]      @relation("author_claims")
  reviewedClaims     AuthorClaim[]      @relation("reviewed_claims")
  adminActions       AdminAction[]      @relation("admin_actions")
  reportsSubmitted   ModerationItem[]   @relation("reports_submitted")
  reportsReceived    ModerationItem[]   @relation("reports_received")
  moderationReviews  ModerationItem[]   @relation("moderation_reviews")
  removalsPerformed  ContentRemoval[]   @relation("removals_performed")
  restoresPerformed  ContentRemoval[]   @relation("restores_performed")
  warnings           UserWarning[]      @relation("user_warnings")
  warningsIssued     UserWarning[]      @relation("warnings_issued")
  suspensions        UserSuspension[]   @relation("user_suspensions")
  suspensionsIssued  UserSuspension[]   @relation("suspensions_issued")
  suspensionsLifted  UserSuspension[]   @relation("suspensions_lifted")
  payments           Payment[]
  affiliateClicks    AffiliateClick[]
  buddyReadsCreated        BuddyRead[]
  buddyReadInvitesSent     BuddyReadInvitation[] @relation("invites_sent")
  buddyReadInvitesReceived BuddyReadInvitation[] @relation("invites_received")

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime @map("expires_at")
  token     String   @unique
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("sessions")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String    @map("account_id")
  providerId            String    @map("provider_id")
  userId                String    @map("user_id")
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  idToken               String?   @map("id_token")
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  @@map("accounts")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("verifications")
}

model Book {
  id            String     @id @default(cuid())
  isbn10        String?    @unique @map("isbn_10")
  isbn13        String?    @unique @map("isbn_13")
  title         String
  author        String?
  coverUrl      String?    @map("cover_url")
  pageCount     Int?       @map("page_count")
  publishedYear Int?       @map("published_year")
  description   String?
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  userBooks       UserBook[]
  readingSessions ReadingSession[]
  roomPresences   RoomPresence[]
  authorClaims    AuthorClaim[]
  affiliateLinks  AffiliateLink[]
  buddyReads      BuddyRead[]

  @@index([isbn10])
  @@index([isbn13])
  @@map("books")
}

model ReadingSession {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  bookId    String    @map("book_id")
  duration  Int       // Duration in seconds
  startedAt DateTime  @map("started_at")
  endedAt   DateTime  @map("ended_at")
  syncedAt  DateTime? @map("synced_at")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  user  User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  book  Book    @relation(fields: [bookId], references: [id], onDelete: Cascade)
  kudos Kudos[]

  @@index([userId])
  @@index([bookId])
  @@index([userId, bookId])
  @@map("reading_sessions")
}

model UserStreak {
  id               String    @id @default(cuid())
  userId           String    @unique @map("user_id")
  currentStreak    Int       @default(0) @map("current_streak")
  longestStreak    Int       @default(0) @map("longest_streak")
  lastGoalMetDate  DateTime? @map("last_goal_met_date")
  freezeUsedToday  Boolean   @default(false) @map("freeze_used_today")
  freezesAvailable Int       @default(0) @map("freezes_available")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_streaks")
}

model DailyProgress {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  date        DateTime // Midnight UTC representing the user's local date
  minutesRead Int      @default(0) @map("minutes_read")
  goalMet     Boolean  @default(false) @map("goal_met")
  freezeUsed  Boolean  @default(false) @map("freeze_used")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([userId, date])
  @@map("daily_progress")
}

model UserBook {
  id           String        @id @default(cuid())
  userId       String        @map("user_id")
  bookId       String        @map("book_id")
  status       ReadingStatus @default(WANT_TO_READ)
  progress     Int           @default(0)
  dateAdded    DateTime      @default(now()) @map("date_added")
  dateFinished DateTime?     @map("date_finished")
  deletedAt    DateTime?     @map("deleted_at")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@index([userId])
  @@index([bookId])
  @@map("user_books")
}

model Payment {
  id              String        @id @default(cuid())
  userId          String        @map("user_id")
  polarCheckoutId String        @unique @map("polar_checkout_id")
  amount          Decimal       @db.Decimal(10, 2)
  currency        String        @default("USD")
  status          PaymentStatus @default(PENDING)
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("payments")
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String   @map("follower_id")
  followingId String   @map("following_id")
  createdAt   DateTime @default(now()) @map("created_at")

  follower  User @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follows")
}

model Kudos {
  id         String   @id @default(cuid())
  giverId    String   @map("giver_id")
  receiverId String   @map("receiver_id")
  sessionId  String   @map("session_id")
  createdAt  DateTime @default(now()) @map("created_at")

  giver    User           @relation("KudosGiven", fields: [giverId], references: [id], onDelete: Cascade)
  receiver User           @relation("KudosReceived", fields: [receiverId], references: [id], onDelete: Cascade)
  session  ReadingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([giverId, sessionId])
  @@index([giverId])
  @@index([receiverId])
  @@index([sessionId])
  @@map("kudos")
}

model RoomPresence {
  id           String    @id @default(cuid())
  userId       String    @map("user_id")
  bookId       String    @map("book_id")
  joinedAt     DateTime  @default(now()) @map("joined_at")
  lastActiveAt DateTime  @default(now()) @map("last_active_at")
  leftAt       DateTime? @map("left_at")
  isAuthor     Boolean   @default(false) @map("is_author")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  // NOTE: This unique constraint does NOT prevent duplicate active presences (leftAt=NULL)
  // because PostgreSQL treats NULL != NULL. Application-level transaction in joinRoom handles this.
  // A proper fix requires a partial unique index via raw SQL: CREATE UNIQUE INDEX ... WHERE left_at IS NULL
  @@unique([userId, bookId, leftAt])
  @@index([userId])
  @@index([bookId])
  @@index([bookId, leftAt])
  @@map("room_presences")
}

model AuthorClaim {
  id                 String             @id @default(cuid())
  userId             String             @map("user_id")
  bookId             String             @map("book_id")
  verificationMethod VerificationMethod @map("verification_method")
  verificationUrl    String?            @map("verification_url")
  verificationText   String?            @map("verification_text")
  status             ClaimStatus        @default(PENDING)
  rejectionReason    RejectionReason?   @map("rejection_reason")
  adminNotes         String?            @map("admin_notes")
  reviewedById       String?            @map("reviewed_by_id")
  reviewedAt         DateTime?          @map("reviewed_at")
  createdAt          DateTime           @default(now()) @map("created_at")
  updatedAt          DateTime           @updatedAt @map("updated_at")

  user               User               @relation("author_claims", fields: [userId], references: [id], onDelete: Cascade)
  reviewer           User?              @relation("reviewed_claims", fields: [reviewedById], references: [id])
  book               Book               @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@index([userId, bookId])
  @@index([status])
  @@index([bookId])
  @@map("author_claims")
}

model ModerationItem {
  id              String           @id @default(cuid())
  contentType     ContentType      @map("content_type")
  contentId       String           @map("content_id")
  reporterId      String           @map("reporter_id")
  reportedUserId  String           @map("reported_user_id")
  reason          String
  status          ModerationStatus @default(PENDING)
  reviewedById    String?          @map("reviewed_by_id")
  reviewedAt      DateTime?        @map("reviewed_at")
  adminNotes      String?          @map("admin_notes")
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")

  reporter       User             @relation("reports_submitted", fields: [reporterId], references: [id], onDelete: Cascade)
  reportedUser   User             @relation("reports_received", fields: [reportedUserId], references: [id], onDelete: Cascade)
  reviewer       User?            @relation("moderation_reviews", fields: [reviewedById], references: [id])
  contentRemoval ContentRemoval?
  userWarnings   UserWarning[]
  userSuspensions UserSuspension[]

  @@unique([reporterId, contentType, contentId])
  @@index([status])
  @@index([reportedUserId])
  @@index([createdAt])
  @@map("moderation_items")
}

model AdminAction {
  id         String   @id @default(cuid())
  adminId    String   @map("admin_id")
  actionType String   @map("action_type")
  targetId   String   @map("target_id")
  targetType String   @map("target_type")
  details    Json?
  createdAt  DateTime @default(now()) @map("created_at")

  admin User @relation("admin_actions", fields: [adminId], references: [id])

  @@index([adminId])
  @@index([createdAt])
  @@map("admin_actions")
}

model ContentRemoval {
  id               String         @id @default(cuid())
  moderationItemId String         @unique @map("moderation_item_id")
  violationType    ViolationType  @map("violation_type")
  adminNotes       String?        @map("admin_notes")
  removedById      String         @map("removed_by_id")
  removedAt        DateTime       @default(now()) @map("removed_at")
  restoredAt       DateTime?      @map("restored_at")
  restoredById     String?        @map("restored_by_id")
  originalContent  String         @map("original_content")
  createdAt        DateTime       @default(now()) @map("created_at")
  updatedAt        DateTime       @updatedAt @map("updated_at")

  moderationItem ModerationItem @relation(fields: [moderationItemId], references: [id], onDelete: Cascade)
  removedBy      User           @relation("removals_performed", fields: [removedById], references: [id])
  restoredBy     User?          @relation("restores_performed", fields: [restoredById], references: [id])

  @@index([moderationItemId])
  @@index([removedById])
  @@index([removedAt])
  @@map("content_removals")
}

model UserWarning {
  id               String          @id @default(cuid())
  userId           String          @map("user_id")
  issuedById       String          @map("issued_by_id")
  warningType      WarningType     @map("warning_type")
  message          String
  moderationItemId String?         @map("moderation_item_id")
  acknowledgedAt   DateTime?       @map("acknowledged_at")
  createdAt        DateTime        @default(now()) @map("created_at")

  user           User            @relation("user_warnings", fields: [userId], references: [id], onDelete: Cascade)
  issuedBy       User            @relation("warnings_issued", fields: [issuedById], references: [id])
  moderationItem ModerationItem? @relation(fields: [moderationItemId], references: [id])

  @@index([userId])
  @@index([userId, acknowledgedAt])
  @@index([createdAt])
  @@map("user_warnings")
}

model UserSuspension {
  id               String             @id @default(cuid())
  userId           String             @map("user_id")
  issuedById       String             @map("issued_by_id")
  reason           String
  duration         SuspensionDuration
  suspendedUntil   DateTime           @map("suspended_until")
  liftedAt         DateTime?          @map("lifted_at")
  liftedById       String?            @map("lifted_by_id")
  moderationItemId String?            @map("moderation_item_id")
  createdAt        DateTime           @default(now()) @map("created_at")

  user           User            @relation("user_suspensions", fields: [userId], references: [id], onDelete: Cascade)
  issuedBy       User            @relation("suspensions_issued", fields: [issuedById], references: [id])
  liftedBy       User?           @relation("suspensions_lifted", fields: [liftedById], references: [id])
  moderationItem ModerationItem? @relation(fields: [moderationItemId], references: [id])

  @@index([userId])
  @@index([suspendedUntil])
  @@index([createdAt])
  @@map("user_suspensions")
}

model AffiliateLink {
  id          String    @id @default(cuid())
  bookId      String    @map("book_id")
  isbn        String
  provider    String
  clickCount  Int       @default(0) @map("click_count")
  conversions Int       @default(0)
  revenue     Decimal   @default(0) @db.Decimal(10, 2)
  lastClicked DateTime? @map("last_clicked")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([bookId, provider])
  @@index([bookId])
  @@index([provider])
  @@map("affiliate_links")
}

model AffiliateClick {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  bookId    String   @map("book_id")
  provider  String
  source      String?
  variant     String?
  countryCode String?  @map("country_code")
  converted   Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([bookId])
  @@index([provider])
  @@index([createdAt])
  @@index([variant])
  @@index([countryCode])
  @@map("affiliate_clicks")
}

model BuddyRead {
  id        String          @id @default(cuid())
  creatorId String          @map("creator_id")
  bookId    String          @map("book_id")
  status    BuddyReadStatus @default(ACTIVE)
  createdAt DateTime        @default(now()) @map("created_at")
  updatedAt DateTime        @updatedAt @map("updated_at")

  creator     User                  @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  book        Book                  @relation(fields: [bookId], references: [id], onDelete: Cascade)
  invitations BuddyReadInvitation[]

  @@index([creatorId])
  @@index([bookId])
  @@map("buddy_reads")
}

model BuddyReadInvitation {
  id          String           @id @default(cuid())
  buddyReadId String           @map("buddy_read_id")
  inviterId   String           @map("inviter_id")
  inviteeId   String           @map("invitee_id")
  status      InvitationStatus @default(PENDING)
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  buddyRead BuddyRead @relation(fields: [buddyReadId], references: [id], onDelete: Cascade)
  inviter   User      @relation("invites_sent", fields: [inviterId], references: [id], onDelete: Cascade)
  invitee   User      @relation("invites_received", fields: [inviteeId], references: [id], onDelete: Cascade)

  @@index([buddyReadId])
  @@index([inviteeId])
  @@index([inviterId])
  @@map("buddy_read_invitations")
}
