// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

// Reading status enum for UserBook
enum ReadingStatus {
  CURRENTLY_READING
  FINISHED
  WANT_TO_READ
}

model User {
  id                  String    @id @default(cuid())
  email               String    @unique
  emailVerified       Boolean   @default(false) @map("email_verified")
  name                String?
  image               String?
  bio                 String?
  avatarUrl           String?   @map("avatar_url")
  applePrivateRelay   Boolean   @default(false) @map("apple_private_relay")
  favoriteGenres      String[]  @default([]) @map("favorite_genres")
  showReadingActivity Boolean   @default(true) @map("show_reading_activity")
  dailyGoalMinutes    Int?      @map("daily_goal_minutes")
  lastActivityViewedAt DateTime? @map("last_activity_viewed_at")
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")

  sessions        Session[]
  accounts        Account[]
  userBooks       UserBook[]
  readingSessions ReadingSession[]
  streak          UserStreak?
  dailyProgress   DailyProgress[]
  followers       Follow[]        @relation("UserFollowers")
  following       Follow[]        @relation("UserFollowing")
  kudosGiven      Kudos[]         @relation("KudosGiven")
  kudosReceived   Kudos[]         @relation("KudosReceived")
  roomPresences   RoomPresence[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime @map("expires_at")
  token     String   @unique
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("sessions")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String    @map("account_id")
  providerId            String    @map("provider_id")
  userId                String    @map("user_id")
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  idToken               String?   @map("id_token")
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  @@map("accounts")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("verifications")
}

model Book {
  id            String     @id @default(cuid())
  isbn10        String?    @unique @map("isbn_10")
  isbn13        String?    @unique @map("isbn_13")
  title         String
  author        String
  coverUrl      String?    @map("cover_url")
  pageCount     Int?       @map("page_count")
  publishedYear Int?       @map("published_year")
  description   String?
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  userBooks       UserBook[]
  readingSessions ReadingSession[]
  roomPresences   RoomPresence[]

  @@index([isbn10])
  @@index([isbn13])
  @@map("books")
}

model ReadingSession {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  bookId    String    @map("book_id")
  duration  Int       // Duration in seconds
  startedAt DateTime  @map("started_at")
  endedAt   DateTime  @map("ended_at")
  syncedAt  DateTime? @map("synced_at")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  user  User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  book  Book    @relation(fields: [bookId], references: [id], onDelete: Cascade)
  kudos Kudos[]

  @@index([userId])
  @@index([bookId])
  @@index([userId, bookId])
  @@map("reading_sessions")
}

model UserStreak {
  id               String    @id @default(cuid())
  userId           String    @unique @map("user_id")
  currentStreak    Int       @default(0) @map("current_streak")
  longestStreak    Int       @default(0) @map("longest_streak")
  lastGoalMetDate  DateTime? @map("last_goal_met_date")
  freezeUsedToday  Boolean   @default(false) @map("freeze_used_today")
  freezesAvailable Int       @default(0) @map("freezes_available")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_streaks")
}

model DailyProgress {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  date        DateTime // Midnight UTC representing the user's local date
  minutesRead Int      @default(0) @map("minutes_read")
  goalMet     Boolean  @default(false) @map("goal_met")
  freezeUsed  Boolean  @default(false) @map("freeze_used")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([userId, date])
  @@map("daily_progress")
}

model UserBook {
  id           String        @id @default(cuid())
  userId       String        @map("user_id")
  bookId       String        @map("book_id")
  status       ReadingStatus @default(WANT_TO_READ)
  progress     Int           @default(0)
  dateAdded    DateTime      @default(now()) @map("date_added")
  dateFinished DateTime?     @map("date_finished")
  deletedAt    DateTime?     @map("deleted_at")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@index([userId])
  @@index([bookId])
  @@map("user_books")
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String   @map("follower_id")
  followingId String   @map("following_id")
  createdAt   DateTime @default(now()) @map("created_at")

  follower  User @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follows")
}

model Kudos {
  id         String   @id @default(cuid())
  giverId    String   @map("giver_id")
  receiverId String   @map("receiver_id")
  sessionId  String   @map("session_id")
  createdAt  DateTime @default(now()) @map("created_at")

  giver    User           @relation("KudosGiven", fields: [giverId], references: [id], onDelete: Cascade)
  receiver User           @relation("KudosReceived", fields: [receiverId], references: [id], onDelete: Cascade)
  session  ReadingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([giverId, sessionId])
  @@index([giverId])
  @@index([receiverId])
  @@index([sessionId])
  @@map("kudos")
}

model RoomPresence {
  id           String    @id @default(cuid())
  userId       String    @map("user_id")
  bookId       String    @map("book_id")
  joinedAt     DateTime  @default(now()) @map("joined_at")
  lastActiveAt DateTime  @default(now()) @map("last_active_at")
  leftAt       DateTime? @map("left_at")
  isAuthor     Boolean   @default(false) @map("is_author")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  // NOTE: This unique constraint does NOT prevent duplicate active presences (leftAt=NULL)
  // because PostgreSQL treats NULL != NULL. Application-level transaction in joinRoom handles this.
  // A proper fix requires a partial unique index via raw SQL: CREATE UNIQUE INDEX ... WHERE left_at IS NULL
  @@unique([userId, bookId, leftAt])
  @@index([userId])
  @@index([bookId])
  @@index([bookId, leftAt])
  @@map("room_presences")
}
